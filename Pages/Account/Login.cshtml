@page
@model programingContestPage.Pages.Account.LoginModel
@{
}
<hr>
<div class="container border" style="padding:20px">
	<form method="post">
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="users.UserName"></label>
			</div>
			<div class="col-5">
				<input type="text" asp-for="users.UserName" class="form-control" name="userName"/>
			</div>
			<span class="text-danger" asp-validation-for="users.UserName"></span>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="users.Password"></label>
			</div>
			<div class="col-5">
				<input type="password" asp-for="users.Password" class="form-control"/>
			</div>
			<span class="text-danger" asp-validation-for="users.Password"></span>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<input type="submit" class="btn btn-primary" value="Sign In" />
			</div>
			<div class="col-3">

			</div>
		</div>


	</form>
</div>
</hr>
<h1>New User</h1>
<a href="../Users/Create" role="button" class="btn btn-success btn-sm">Sign Up</a>