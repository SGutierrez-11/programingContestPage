@page
@model programingContestPage.Pages.Account.LoginModel
@{
}

@if(Model.Alert!=null)
{
<div class="alert alert-warning alert-dismissable">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <strong>Error!</strong>The user name or the password is incorrect.
</div>
}


<hr>
<div class="container border" style="padding:20px">
	<form method="post">
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credential.UserName"></label>
			</div>
			<div class="col-5">
				<input type="text" asp-for="Credential.UserName" class="form-control"/>
			</div>
			<span class="text-danger" asp-validation-for="Credential.UserName"></span>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credential.Password"></label>
			</div>
			<div class="col-5">
				<input type="password" asp-for="Credential.Password" class="form-control"/>
			</div>
			<span class="text-danger" asp-validation-for="Credential.Password"></span>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<input type="submit" class="btn btn-primary" value="Sign In" />
			</div>
			<div class="col-3">

			</div>
		</div>


	</form>
</div>
</hr>
<h1>New User</h1>
<a href="../Users/Create" role="button" class="btn btn-success btn-sm">Sign Up</a>